<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/layout_width"
    android:layout_height="@dimen/layout_height"
    tools:context=".Stories.StoriesActivity"
    android:background="@drawable/stories_background">

    <ImageView
        android:id="@+id/icbackStories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:maxWidth="40dp"
        android:maxHeight="40dp"
        android:src="@drawable/ic_back" />

    <TextView
        android:id="@+id/storiesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="70dp"
        android:fontFamily="@font/plus_jakarta_sans_bold"
        android:text="Inspirational Stories"
        android:textColor="@color/black"
        android:textSize="27dp" />

    <ImageView
        android:id="@+id/crystalView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="350dp"
        android:src="@drawable/stories_crystal" />

    <ImageView
        android:id="@+id/gwilymView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="500dp"
        android:src="@drawable/stories_gwilym" />

    <ImageView
        android:id="@+id/bonnieView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="650dp"
        android:src="@drawable/stories_bonnie" />

</RelativeLayout>