<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_back"
        android:contentDescription="Back" />

    <!-- Illustration -->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/recomendations"
        android:contentDescription="Illustration"
        android:layout_marginTop="16dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Recommendation"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp" />

    <!-- Buttons -->
    <Button
        android:id="@+id/buttonUnderweight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UNDERWEIGHT"
        android:backgroundTint="@color/btn_recomendations"
        android:textColor="@color/teks_recomendations"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NORMAL"
        android:backgroundTint="@color/btn_recomendations"
        android:textColor="@color/teks_recomendations"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/buttonOverweight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OVERWEIGHT"
        android:backgroundTint="@color/btn_recomendations"
        android:textColor="@color/teks_recomendations"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/buttonObesity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OBESITY"
        android:backgroundTint="@color/btn_recomendations"
        android:textColor="@color/teks_recomendations"
        android:layout_marginTop="8dp" />

</LinearLayout>